<!DOCTYPE html>
<html>
<head>
  <title>Chess</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class="main-background black">
  <nav>
    <div class="nav-wrapper">
      <%= link_to 'Konquer', root_path, class: 'brand-logo' %>
      <a href="#" data-activates="mobile-nav" class="button-collapse"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'New game', new_game_path %></li>
          <li><%= link_to 'Dashboard', '#' %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'About', '#' %></li>
          <li><%= link_to 'Log in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path, class: "waves-effect waves-light btn" %></li>
        <% end %>
      </ul>
      <ul id="mobile-nav" class="side-nav">
        <% if user_signed_in? %>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'New game', new_game_path %></li>
          <li><%= link_to 'Dashboard', '#' %></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'About', '#' %></li>
          <li><%= link_to 'Log in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path, class: "waves-effect waves-light btn" %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <main class="container">
    <%= yield %>
  </main>

</body>
</html>
