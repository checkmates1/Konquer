<div  class="card-panel col s3 black white-text formatting center">
  <% if user_signed_in? %>
    <h1><%= @game.name ? @game.name : "Game: " + @game.id.to_s %></h1>
    <% if @game.white_player_id == nil %>
      <%= link_to 'Join Game', game_path(@game, game: { white_player_id: current_user.id }), method: :put, class: "waves-effect waves-light btn" %>
    <% elsif @game.black_player_id == nil && @game.white_player_id != nil %>
      <% if @game.white_player_id == current_user.id %>
        <p> Waiting for one more player </p>
      <% else %>
        <ul class="collection">
          <%= render "games/player_detail", player: @white_player, color: "White" %>
          <li class="collection-item valign-wrapper">
            <%= link_to 'Join Game', game_path(@game, game: { black_player_id: current_user.id }), class: "waves-effect waves-light btn", method: :put %>
          </li>
        </ul>
      <% end %>
    <% else %>
      <ul class="collection">
        <%= render "games/player_detail", player: @white_player, color: "White" %>
        <%= render "games/player_detail", player: @black_player, color: "Black" %>
      </ul>
      <%= link_to 'Try Another Game', root_path, class: "waves-effect waves-light btn" %>
    <% end %>
  <% else %>
    <%= link_to 'Sign In To Join', new_user_session_path, class: "waves-effect waves-light btn" %>
    <br  />
    <%= link_to 'Sign Up To Join', new_user_registration_path, class: "waves-effect waves-light btn" %>
  <% end %>

  <h6><%= link_to 'Go back to open games', root_path, class: "waves-effect waves-light btn" %></h6>

  <% if user_signed_in? %>
    <% if @game.winning_player == nil && @game.white_player_id && @game.black_player_id %>
      <%= link_to 'Forfeit', forfeit_game_path(@game), method: :put, class: "waves-effect waves-light btn" %>
    <% end %>
  <% end %>

