<div id = "hero" class="center card-panel col s3 white-text formatting">
  <h1 id="heading">Konquer</h1>
  <br>
  <h4 id= "subtitle"><i>Challenge your friends to a game of chess</i></h4>
  <% if user_signed_in? %>
    <%= link_to 'View Available Games', games_path, class: "waves-effect waves-light btn" %>
  <% else %>
    <%= link_to 'Log In', new_user_session_path, class: "waves-effect waves-light btn" %>
    <%= link_to 'Sign Up', new_user_registration_path, class: "waves-effect waves-light btn" %>
  <% end %>
</div>
