
<% if user_signed_in? %>
  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "waves-effect waves-light btn" %>
  <%= link_to 'New Game', new_game_path, class: "waves-effect waves-light btn" %>
  <h1>Available Games</h1>
  <div>
    <% @available_games.each do |game| %>
      <li class = "game"><%= link_to game.name, game_path(game) %></li>
    <% end %>
  </div>
<% else %>
  <%= link_to 'Sign In', new_user_session_path %>
  <%= link_to 'Sign Up', new_user_registration_path %>
  <h1>Create an Account to Play!</h1>
<% end %>

<div>
<% @available_games.each do |game| %>
  <li class = "game"><%= link_to game.name, game_path(game) %></li>
<% end %>
</div>